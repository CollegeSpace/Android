<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    tools:context=".main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:focusable="false"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Theme_Blue_Light"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_01"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btn_menu_title"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/menu_btn"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/screen_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Home"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="@dimen/txt_02"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/title_bar"/>
        </LinearLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:background="@drawable/app_back_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/home_posts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:scrollbarSize="@dimen/scroll_bar"
                android:scrollbarThumbVertical="@color/Theme_Blue_Scroll"
                android:focusable="false">
            </ListView>
        </android.support.v4.widget.SwipeRefreshLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scrollbarSize="@dimen/scroll_bar"
            android:scrollbarThumbVertical="@color/Theme_Blue_Scroll"
            android:id="@+id/scr_about_us">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_00"
                android:layout_marginLeft="@dimen/margin_00"
                android:layout_marginRight="@dimen/margin_00"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="34sp"
                    android:layout_marginLeft="@dimen/margin_04"
                    android:layout_marginTop="@dimen/margin_01"
                    android:textColor="@color/Theme_Blue_Swipe_C2"
                    android:text="@string/app_name"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="@dimen/margin_01"
                    android:layout_marginLeft="@dimen/margin_04"
                    android:layout_marginRight="@dimen/margin_03"
                    android:text="@string/description"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_04"
                    android:layout_marginTop="@dimen/margin_01"
                    android:textColor="@color/Theme_Blue_Swipe_C3"
                    android:text="^ TL;DR Your Best Friend :P"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_04"
                    android:layout_marginTop="@dimen/margin_01"
                    android:text="Version"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:layout_marginLeft="@dimen/margin_04"
                    android:text="@string/app_version"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_04"
                    android:layout_marginTop="@dimen/margin_01"
                    android:textColor="@color/Theme_Blue_Swipe_C3"
                    android:text="^ not a random stuff :P"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_04"
                    android:layout_marginTop="@dimen/margin_01"
                    android:text="Signature"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:layout_marginLeft="@dimen/margin_04"
                    android:text="build-ap.jks"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/margin_04"
                    android:layout_marginTop="@dimen/margin_01"
                    android:text="Developers"/>
                <TextView
                    android:id="@+id/txt_amanp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:layout_marginLeft="@dimen/margin_04"
                    android:text="Aman Priyadarshi (AP)"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:layout_marginLeft="@dimen/margin_04"
                    android:text="Manraj Singh (manra.js sir xD)"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_02"
                    android:background="@drawable/shadow_1">
                    <Button
                        android:id="@+id/btn_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/Theme_Blue_Swipe_C2"
                        android:textColor="#ffff"
                        android:text="Feedback" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_02"
                    android:layout_marginBottom="@dimen/margin_03"
                    android:textColor="@color/Theme_Blue_Swipe_C4"
                    android:text="@string/copyright"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
